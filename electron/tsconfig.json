{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "../build/electron",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "**/*",
    "../src/services/latexCompilerNode.ts",
    "../src/services/latexCompilerFactory.ts",
    "../src/services/latexGenerator.ts",
    "../src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "../src/services/__tests__",
    "../src/**/*.test.ts",
    "../src/services/latexCompilerElectron.ts"
  ]
}